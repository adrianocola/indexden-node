{
    "version":"0.1",
    "index":"indexden",
    "authority":"http://github.com/adrianocola",
    "method":{
        "documentation":"http://www.indexden.com/documentation/api"
    },
    "methods":{
        "list_indexes":{
            "path":"/v1/indexes",
            "method":"GET",
            "expected_status":[200]
        },
        "get_index":{
            "path":"/v1/indexes/:index",
            "method":"GET",
            "expected_status":[200],
            "required_params":["index"]
        },
        "create_index":{
            "path":"/v1/indexes/:index",
            "method":"PUT",
            "expected_status":[201,204],
            "required_params":["index"],
            "optional_params":["public_search"]
        },
        "delete_index":{
            "path":"/v1/indexes/:index",
            "method":"DELETE",
            "expected_status":[200],
            "required_params":["index"]
        },
        "add_documents":{
            "path":"/v1/indexes/:index/docs",
            "method":"PUT",
            "expected_status":[200],
            "required_params":["index"]
        },
        "delete_documents":{
            "path":"/v1/indexes/:index/docs",
            "method":"DELETE",
            "expected_status":[200],
            "required_params":["index"]
        },
        "update_variables":{
            "path":"/v1/indexes/:index/docs/variables",
            "method":"PUT",
            "expected_status":[200],
            "required_params":["index"]
        },
        "update_categories":{
            "path":"/v1/indexes/:index/docs/categories",
            "method":"PUT",
            "expected_status":[200],
            "required_params":["index"]
        },
        "add_function":{
            "path":"/v1/indexes/:index/functions/:number",
            "method":"PUT",
            "expected_status":[200],
            "required_params":["index","number"]
        },
        "get_functions":{
            "path":"/v1/indexes/:index/functions",
            "method":"GET",
            "expected_status":[200],
            "required_params":["index"]
        },
        "delete_function":{
            "path":"/v1/indexes/:index/functions/:number",
            "method":"DELETE",
            "expected_status":[200],
            "required_params":["index","number"]
        },
        "search":{
            "path":"/v1/indexes/:index/search",
            "method":"GET",
            "expected_status":[200],
            "required_params":["index", "q"],
            "optional_params":["start", "len", "function", "fetch", "snippet", "var", "category_filters", "filter_docvar","filter_function"]
        },
        "delete_search":{
            "path":"/v1/indexes/:index/search",
            "method":"DELETE",
            "expected_status":[200],
            "required_params":["index", "q"],
            "optional_params":["start", "function", "var", "category_filters", "filter_docvar","filter_function"]
        },
        "promote":{
            "path":"/v1/indexes/:index/promote",
            "method":"PUT",
            "expected_status":[200],
            "required_params":["index"]
        }
    }
}